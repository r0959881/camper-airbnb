datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  campers   Camper[]  @relation("UserCampers")
  reviews   Review[]  // A user can leave many reviews
  bookings  Booking[] // A user can make many bookings
}

model Camper {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  location    String
  price       Float
  ownerId     Int
  owner       User      @relation("UserCampers", fields: [ownerId], references: [id])
  reviews     Review[]  // A camper can have many reviews
  bookings    Booking[] // A camper can have many bookings
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Review {
  id        Int      @id @default(autoincrement())
  rating    Int      // 1 to 5 stars
  comment   String
  userId    Int
  camperId  Int
  user      User     @relation(fields: [userId], references: [id])
  camper    Camper   @relation(fields: [camperId], references: [id])
  createdAt DateTime @default(now())
}

model Booking {
  id         Int      @id @default(autoincrement())
  startDate  DateTime
  endDate    DateTime
  userId     Int
  camperId   Int
  user       User     @relation(fields: [userId], references: [id])
  camper     Camper   @relation(fields: [camperId], references: [id])
  createdAt  DateTime @default(now())
}
